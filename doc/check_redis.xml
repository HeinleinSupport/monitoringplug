    <refpurpose>Check Redis status.</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
    <cmdsynopsis>
      <command>&mpcheckname;</command>
      <arg choice="opt">
        <option>--hostname <replaceable>ADDRESS</replaceable></option>
      </arg>
      <arg choice="opt">
        <option>--port <replaceable>PORT</replaceable></option>
      </arg>
