  <refmeta>
    <refentrytitle>notify_aspsms</refentrytitle>
    <manvolnum>1</manvolnum>
  </refmeta>
  <refnamediv>
    <refname>&mpcheckname;</refname>
    <refpurpose>Send notification by sms.</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
    <cmdsynopsis>
      <command>&mpcheckname;</command>
      <arg choice="plain">
        <option>--number <replaceable>NUMBER</replaceable></option>
      </arg>
      <arg choice="plain">
        <option>--file <replaceable>FILE</replaceable></option>
      </arg>
      <arg choice="plain">
        <option>--message <replaceable>MESSAGE</replaceable></option>
      </arg>
      <arg choice="plain">
        <option>--userkey <replaceable>USERKEY</replaceable></option>
      </arg>
      <arg choice="plain">
        <option>--password <replaceable>PASSWORD</replaceable></option>
      </arg>
    </cmdsynopsis>
  </refsynopsisdiv>
  <refsect1 id="description">
    <title>DESCRIPTION</title>
    <para>Send a notification by sms through the ASPSMS.com gateway.</para>
   <warning>
    <para>Userkey and Password are sent unencryptet.</para>
   </warning>
  </refsect1>
  <refsect1 id="options">
    <title>OPTIONS</title>
    <para>The Monitoringplug notification options</para>
    <xi:include href="mp_opts_notify.xml"/>
    <para>Notify specific options</para>
    <variablelist>
      <varlistentry>
        <term><option>-n</option></term>
        <term><option>--number=<replaceable>Number</replaceable></option></term>
        <listitem>
          <para>Destination number.</para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term><option>-U</option></term>
        <term><option>--userkey=<replaceable>USERKEY</replaceable></option></term>
        <listitem>
          <para>The userkey of the ASPSMS account.</para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term><option>-P</option></term>
        <term><option>--password=<replaceable>PASSWORD</replaceable></option></term>
        <listitem>
          <para>The password of the ASPSMS account.</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsect1>
